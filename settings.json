{
  "breadcrumbs.enabled": true,
  "workbench.editor.enablePreview": false,
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "phase",
  "editor.parameterHints.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.autoReveal": false,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.formatOnPaste": true,
  "editor.detectIndentation": false,
  "workbench.colorTheme": "Visual Studio Light",
  "workbench.editor.highlightModifiedTabs": true,
  "editor.fontFamily": "FiraCode-Retina, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.rulers": [
    120
  ],
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.lineNumbers": "relative",
  "javascript.validate.enable": false,
  "eslint.probe": [
    "typescript",
    "typescriptreact"
  ],
  "eslint.validate": [
    "typescript",
    "typescriptreact"
  ],
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingEmptyBraces": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[js]": {
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": false
    },
  },
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#2cc16f"
  },
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        ">"
      ],
      "commands": [
        "editor.action.indentLines"
      ]
    },
    {
      "before": [
        "<"
      ],
      "commands": [
        "editor.action.outdentLines"
      ]
    },
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "u"
      ],
      "after": [],
      "commands": [
        {
          "command": "undo"
        }
      ]
    },
    {
      "before": [
        "<C-r>"
      ],
      "after": [],
      "commands": [
        {
          "command": "redo"
        }
      ]
    },
    // Not working: https://github.com/VSCodeVim/Vim/issues/5122
    {
      "before": [
        "shift+enter"
      ],
      "after": [
        "k",
        "^"
      ],
    },
    {
      "before": [
        "Y"
      ],
      "after": [
        "y",
        "$"
      ]
    },
  ],
  "vim.useSystemClipboard": true,
  "vim.leader": ",",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "tsimporter.emitSemicolon": false,
  "tsimporter.preferRelative": false,
  // "macros": {
  //   "runSpec": [
  //     "workbench.action.terminal.focus",
  //     {
  //       "command": "workbench.action.terminal.sendSequence",
  //       "args": {
  //         "text": "spec ${file}:${lineNumber}\u000D"
  //       }
  //     }
  //   ]
  // },
  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "details": false,
      "history": false,
      "remote": false
    },
    "editorGroup": false,
    "explorer": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true,
      "stashInline": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true,
      "stash": true
    }
  },
  "terminal.integrated.scrollback": 10000,
  "terminal.external.osxExec": "iTerm2.app",
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.cursorStyle": "line",
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  // Shrinks line numbers, but you can't have any other icons there
  // "editor.glyphMargin": false,
  "terminal.integrated.allowChords": false,
  "editor.inlineSuggest.enabled": true,
  "github.copilot.enable": {
    "*": true,
    "yaml": true,
    "plaintext": true,
    "markdown": true
  },
  "gitlens.codeLens.enabled": false,
  "editor.renderWhitespace": "none",
  "editor.renderControlCharacters": false,
  //"vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
  "ruby.useBundler": true,
  "ruby.useLanguageServer": true,
  "ruby.format": "rubocop",
  "ruby.rubocop.executePath": "/usr/local/bin/rubocop-daemon-wrapper/",
  "ruby.rubocop.onSave": true,
  "ruby.lint": {
    "rubocop": {
      "useBundler": true
    },
  },
  "[ruby]": {
    "editor.defaultFormatter": "misogi.ruby-rubocop",
    "editor.formatOnSave": true,
  },
  "conceal.substitutions": [
    {
      "language": "ruby",
      // "conceal.revealOn": "active-line",
      "substitutions": [
        {
          "ugly": "lambda",
          "pretty": "Î»",
          "post": "\\b"
        }
      ]
    }
  ],
  "css.lint.unknownAtRules": "ignore",
  "ruby-spec-runner.rspecDecorateEditorWithResults": true,
  "ruby-spec-runner.rspecCodeLensPrompts": false,
  "ruby-spec-runner.rspecCommand": "bundle exec bin/rspec",
  "ruby-spec-runner.rspecCodeLensDebugPrompts": false,
  "ruby-spec-runner.minitestCodeLensPrompts": false,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.acceptSuggestionOnEnter": "off",
  "window.zoomLevel": 1,
  "rust-client.channel": "stable",
  "rust-client.rlsPath": "/opt/homebrew/opt/rust-analyzer/bin/rust-analyzer",
  "rust-client.disableRustup": true,
}
