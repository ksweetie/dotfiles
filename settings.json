{
  "breadcrumbs.enabled": true,
  "workbench.editor.enablePreview": false,
  "window.zoomLevel": 1,
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "phase",
  "editor.parameterHints.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.autoReveal": false,
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.formatOnPaste": true,
  "editor.detectIndentation": false,
  "workbench.colorTheme": "Visual Studio Light",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.highlightModifiedTabs": true,
  "editor.fontFamily": "FiraCode-Retina, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.rulers": [
    120
  ],
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.lineNumbers": "relative",
  "javascript.validate.enable": false,
  "standard.autoFixOnSave": true,
  "standard.validate": [
    "javascript",
    "javascriptreact"
  ],
  "eslint.probe": ["typescript", "typescriptreact"],
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "workbench.colorCustomizations": {
    "editorCursor.foreground": "#2cc16f"
  },
  "window.title": "${activeEditorMedium}${separator}${rootName}",
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": [
        ">"
      ],
      "commands": [
        "editor.action.indentLines"
      ]
    },
    {
      "before": [
        "<"
      ],
      "commands": [
        "editor.action.outdentLines"
      ]
    },
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": [
        "j",
        "j"
      ],
      "after": [
        "<Esc>"
      ]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "u"
      ],
      "after": [],
      "commands": [
        {
          "command": "undo"
        }
      ]
    },
    {
      "before": [
        "<C-r>"
      ],
      "after": [],
      "commands": [
        {
          "command": "redo"
        }
      ]
    }
  ],
  "vim.useSystemClipboard": true,
  "vim.leader": ",",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "html-css-class-completion.includeGlobPattern": "app/**/*.{css,scss,sass,html}",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "tsimporter.emitSemicolon": false,
  "tsimporter.preferRelative": false,
  "macros": {
    "runSpec": [
      "workbench.action.terminal.focus",
      {
        "command": "workbench.action.terminal.sendSequence",
        "args": {
          "text": "spec ${file}:${lineNumber}\u000D"
        }
      }
    ]
  },
  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": true,
      "compare": true,
      "details": false,
      "history": false,
      "remote": false
    },
    "editorGroup": false,
    "explorer": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true
    },
    "scmGroup": {
      "compare": true,
      "openClose": true,
      "stash": true,
      "stashInline": true
    },
    "scmItem": {
      "clipboard": true,
      "compare": true,
      "history": true,
      "remote": true,
      "stash": true
    }
  },
  "terminal.integrated.scrollback": 10000,
  "terminal.external.osxExec": "iTerm2.app",
  "gitlens.codeLens.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "ruby.useBundler": true,
  "ruby.useLanguageServer": true,
  "ruby.lint": {
    "rubocop": {
      "useBundler": true
    },
},
"editor.cursorStyle": "line",
"editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
"editor.wordWrap": "off",
"editor.folding": false,
"editor.glyphMargin": false,
"terminal.integrated.allowChords": false,
"editor.inlineSuggest.enabled": true,
"rust-client.channel": "stable", // Channel
"rust-client.rlsPath": "/opt/homebrew/opt/rust-analyzer/bin/rust-analyzer", // Language server
"rust-client.disableRustup": true,
  // This auto-fixes Ruby files, but is super slow
  // "editor.formatOnSave": true,
  // "[ruby]": {
  //   "editor.defaultFormatter": "misogi.ruby-rubocop"
  // }
}
