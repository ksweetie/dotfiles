{
  "active_pane_modifiers": {
    "inactive_opacity": 0.5
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "enable_experimental_live_diffs": true,
    "version": "2"
  },
  "base_keymap": "VSCode",
  "buffer_font_size": 16,
  "buffer_line_height": { "custom": 1.5 },
  "cursor_blink": false,
  "experiments": {
    "experimental_themes": true
  },
  "file_scan_exclusions": [".yarn/releases/*.cjs"],
  "file_scan_inclusions": [".env"],
  "git": {
    "inline_blame": {
      "show_commit_summary": true
    }
  },
  // Disabling these reduces how wide the gutter is. I haven't found these helpful so far, but maybe worth trying again later.
  "gutter": {
    "code_actions": false,
    "folds": false,
    "runnables": false
  },
  "languages": {
    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop", "!solargraph", "..."]
    },
    "Rust": {
      "tab_size": 4
    }
  },
  "lsp": {
    "rubocop": {
      "initialization_options": {}
    },
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false,
          "onTypeFormatting": false
        }
      }
    }
  },
  "preferred_line_length": 120,
  "preview_tabs": {
    "enabled": false
  },
  "project_panel": {
    "indent_size": 10,
    "file_icons": true,
    "auto_reveal_entries": false
  },
  "relative_line_numbers": true,
  "scroll_beyond_last_line": "off",
  "scrollbar": {
    "axes": {
      "horizontal": false // Fixes this bug: https://github.com/zed-industries/zed/issues/22252 but might want to disable it if that gets fixed?
    }
  },
  "show_nav_history_buttons": false,
  "show_tab_bar_buttons": true,
  "show_user_picture": false,
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tab_size": 2,
  "terminal": {
    "dock": "right"
  },
  "theme": {
    "mode": "system",
    "light": "macOS Classic Light",
    "dark": "Catppuccin Frapp√© (Blue Blur+)"
  },
  // This hides an entire toolbar below the tabs
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "ui_font_size": 16,
  "vertical_scroll_margin": 5,
  "vim_mode": true,
  "wrap_guides": [120]
}
