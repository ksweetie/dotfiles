{
  "theme": {
    "mode": "light",
    "light": "macOS Classic Light",
    "dark": "Catppuccin Frapp√© (Blue Blur+)"
  },
  "icon_theme": "VSCode Icons (Light)",
  "active_pane_modifiers": {
    "inactive_opacity": 0.5
  },
  "assistant": {
    "button": false,
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-7-sonnet-latest"
    },
    "enable_experimental_live_diffs": true,
    "version": "2"
  },
  "base_keymap": "VSCode",
  "buffer_font_size": 16.0,
  "buffer_line_height": { "custom": 1.5 },
  "collaboration_panel": {
    "button": false
  },
  "current_line_highlight": "none",
  "cursor_blink": false,
  "experiments": {
    "experimental_themes": true
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "file_scan_exclusions": [".yarn/releases/*.cjs", "**/*.gd.uid"],
  "file_scan_inclusions": [".env"],
  "git": {
    "inline_blame": {
      "show_commit_summary": true
    }
  },
  "git_panel": {
    "button": false,
    "default_width": 500
  },
  "gutter": {
    "code_actions": false,
    "folds": false,
    "runnables": false
  },
  "languages": {
    "JavaScript": {
      "language_servers": [],
      "prettier": { "allowed": false }
    "GDScript": {
      "hard_tabs": true,
      "format_on_save": {
        "external": {
          "command": "gdformat",
          "arguments": ["-", "--line-length", "120"]
        }
      }
    },
    "Ruby": {
      "language_servers": ["ruby-lsp", "rubocop", "!solargraph", "..."]
    },
    "Rust": {
      "tab_size": 4
    }
  },
  "lsp": {
    "rubocop": {
      "initialization_options": {}
    },
    "ruby-lsp": {
      "initialization_options": {
        "enabledFeatures": {
          "diagnostics": false,
          "onTypeFormatting": false
        }
      }
    }
  },
  "notification_panel": {
    "button": false
  },
  "outline_panel": {
    "button": false
  },
  "preferred_line_length": 120,
  "preview_tabs": {
    "enabled": false
  },
  "project_panel": {
    "auto_reveal_entries": false,
    "button": false,
    "default_width": 500,
    "file_icons": true,
    "indent_size": 12
  },
  "relative_line_numbers": true,
  "scroll_beyond_last_line": "off",
  "scrollbar": {
    "axes": {
      "horizontal": false // Fixes this bug: https://github.com/zed-industries/zed/issues/22252 but might want to disable it if that gets fixed?
    }
  },
  "show_user_picture": false,
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tab_size": 2,
  "terminal": {
    "button": false,
    "dock": "right"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "ui_font_size": 16,
  "vertical_scroll_margin": 5,
  "vim_mode": true,
  "wrap_guides": [120]
}
